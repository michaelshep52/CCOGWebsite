@model CCOGWebsite.Models.Giving

@{
    ViewData["Title"] = "Delete";
}

<div class="container-fluid">
    <div class="row justify-content-evenly">
        <div class="col-md-8">
            <h1 class="text-center fancy shadow p-3 mb-4 bg-body-tertiary rounded border border-2">
                Delete Giving
            </h1>
            <h3>Are you sure you want to delete this?</h3>
            <div>
                <hr />
                <dl class="row justify-content-evenly text-center">
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.Amount)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Amount)
                    </dd>
                    <dt class="col-sm-2">
                        @Html.DisplayNameFor(model => model.GivingTowards)
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.GivingTowards)
                    </dd>
                </dl>

                <form asp-action="Delete" class="text-center">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Delete" class="btn btn-danger rounded-pill" />
                    <a class="btn btn-fance rounded-pill" asp-action="Index">Back to List</a>
                </form>
            </div>
        </div>
    </div>
</div>


@model IEnumerable<CCOGWebsite.Models.Event>

@{
    ViewData["Title"] = "Index";
}
<body>
    <!--This is a commit-->
    <div class="container-fluid">
        <div class="row justify-content-evenly">
            <div class="col-9">
                <h1 class="text-center fancy shadow p-3 mb-4 bg-body-tertiary rounded border border-2">
                    Events
                </h1>
            </div>
            <div class="col-8 text-center shadow p-3 mb-3 bg-body-tertiary rounded border border-2">
                @foreach (var item in Model)
                {
                    <h3>
                        @Html.DisplayFor(modelItem => item.Name)
                    </h3>
                    <hr />
                    <p >
                        @Html.DisplayFor(modelItem => item.Details)
                    </p>
                    <p >
                        @Html.DisplayFor(modelItem => item.Date)
                    </p>
                    <footer class="p-3 mb-5 rounded">
                        <a class="btn btn-fance rounded-pill" asp-action="Edit" asp-route-id="@item.Id" role="button">Edit</a> 
                        <a class="btn btn-fance rounded-pill" asp-action="Details" asp-route-id="@item.Id" role="button">Details</a> 
                        <a class="btn btn-fance rounded-pill" asp-action="Delete" asp-route-id="@item.Id" role="button">Delete</a>
                    </footer>
                }
            </div>
            <div class="col-10 p-3 mb-3 text-center">
                <a class="btn btn-fance rounded-pill" asp-action="Create" role="button">Create Event</a>
            </div>
        </div>
    </div>
</body>

